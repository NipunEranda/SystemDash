name: Linux SystemDash Release

on:
  push:
    # tags:
    #   - "v*"  # Runs only when pushing a version tag (e.g., v1.0.0)

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Install Rust
        uses: dtolnay/rust-toolchain@stable
        with:
          targets: x86_64-unknown-linux-gnu

      - name: Install Rust target
        run: rustup target add x86_64-unknown-linux-gnu

      - name: Install cross-compilation tools
        run: sudo apt update && sudo apt install -y build-essential gcc

      - name: Clean cargo build cache
        run: cargo clean

      - name: Build project
        run: cargo build --release --target x86_64-unknown-linux-gnu --verbose

      - name: Debug target output
        run: ls -R target/x86_64-unknown-linux-gnu/release

      - name: Prepare artifact
        run: |
          mkdir -p release
          cp target/x86_64-unknown-linux-gnu/release/SystemDash release/
        shell: bash

      - name: Upload artifact
        uses: actions/upload-artifact@v4
        with:
          name: SystemDash
          path: release/SystemDash

  release:
    needs: build
    runs-on: ubuntu-latest
    permissions:
      contents: write

    steps:
      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: artifacts

      - name: List artifacts
        run: ls -R artifacts

      - name: Create GitHub Release
        uses: softprops/action-gh-release@v2
        with:
          files: artifacts/**/* 
          token: ${{ secrets.GITHUB_TOKEN }}